<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript">
</script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'>
</script>

<body>
  <div class="image"></div>â€‹
  <div class="container-fluid">
    <div class="backing">
      <div class="col-md-3"></div>
      <div class="col-md-6 profile">
        <table border="1" class="show-table">
            <p id="notice"><%= notice %></p>
          <tr>
            <td><strong class="titles">Name:</td>
            <td class="backing" class="wide-row"> <%= results[@bar.biz_id].name %></td>
          </tr>
          <tr>
            <td><strong class="titles">Address: </strong></td>
            <td class="backing"><%= results[@bar.biz_id].location.display_address[0] %>, <%= results[@bar.biz_id].location.display_address[2].tr(',',"") %></td>
          </tr>
          <tr>
            <td><strong class="titles">Phone:</strong></td>
            <td class="backing"><% string = results[@bar.biz_id].phone %>
              <%= string.insert(3,'-').insert(7,'-') %></td>
          </tr>
          <tr>
            <td><strong class="titles">Day:</strong></td>
            <td class="backing"><%= @bar.day %></td>
          </tr>
          <tr>
            <td><strong class="titles">Time:</strong></td>
            <td class="backing"><%= @bar.time %></td>
          </tr>
          <tr>
            <td><strong class="titles">Theme:</strong></td>
            <td class="backing"><%= @bar.theme %></td>
          </tr>
          <tr>
            <td><strong class="titles">Website:</strong></td>
            <td class="backing"><a href="<%= results[@bar.biz_id].url %>"><%= results[@bar.biz_id].url %></a></td>
          </tr>
          <tr>
            <td>
              <%= button_to 'Edit', edit_bar_path, :class => "button-show", method: 'get' %>
            </td>
            <td><%= button_to 'Back', bars_path, :class => "button-show" %></td>
          </tr>
        </table>

        <div id="map-att"></div>


      <div class="col-md-3"></div>
    </div>
  </div>


<script type="text/javascript">
handler = Gmaps.build('Google');
  handler.buildMap({ provider: {zoom: 16, provider_key: "AIzaSyCT8qHuiTUCTZIY8u7OUmNLl7Bx8TpDHH8"}, internal: {id: 'map-att'}}, function(){
    markers = handler.addMarkers([
      {
      
        lat: <%= @bar.lat %>, // pulls in the latitude for the marker via ERB
        lng: <%= @bar.lon %>, // pulls in the longitude for the marker via ERB
        infowindow: "Trivia at <%= results[@bar.biz_id].name %> 's tonight?" // info window text (this is optional)
      },
    ]);  
    handler.map.centerOn(markers[0]); // centers on the first marker in the array
  });
  

</script>
</body>
